<div class="main">
<div class="myprofiel">
  <h1><%= @user.name %></h1>
</div>

  <canvas id="myChart" width="200" height="100"></canvas>
  <script>draw_graph();</script>

<ul class="mymenu">
  <%= link_to "投稿", articleup_path %>
</ul>

<table class="table table-hover boards__table">
  <thead class="thead-dark">
  <tr>
    <th>ID</th>
    <th>トピック</th>
    <th>タイトル</th>
    <th>学習時間</th>
    <th>学習内容</th>
  </tr>
  </thead>
  <tbody>
  <% @articles.each do |ati1| %>
  <tr>
    <th><%= ati1.id %></th>
    <td><%= ati1.topic %></td>
    <td><%= ati1.title %></td>
    <td><%= ati1.study_time %></td>
    <td><%= ati1.content %></td>
  </tr>
    <% end %>
  </tbody>
</table>

  <%= month_calendar events: @articles do |date, articles| %>
    <%= date.day %>
    <% articles.each do |article| %>
    <div>
      <%= link_to article.title, "#" %>
    </div>
    <% end %>

  <% end %>


</div>

